.container-fluid.container-lg.bg-light
    .row
        b:if(cond=cond="data:view.isHomepage").container-fluid
            //HIGHTLIGHTS POSTS
            #hightlights.container-fluid
                include hightlights.pug

        .col-12.col-lg-9
            b:if(cond="data:view.isHomepage")

                //RECIENTES
                b:section#recientes(growth="horizontal" maxwidgets="" showaddelement="yes")
                    include recientes.pug

            //MAIN SECTION 
            main.container.my-3
                //b:class(name="mt-4" cond="data:view.isHomepage != true")
                include posts.pug

        //RIGHT SIDEBAR
        #rightbar.col-12.col-lg-3.radius
            .container
                include rightbar.pug
